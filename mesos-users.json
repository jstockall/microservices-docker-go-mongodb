{
    "id": "cinema/users",
    "container": {
      "type": "DOCKER",
      "docker": {
          "image": "stockallj/cinema-users:201702270850",
          "network": "BRIDGE",
          "portMappings": [
            {
              "protocol": "tcp",
              "containerPort": 8080,
              "labels": {
                "VIP_0": "/users:80"
              },
              "name": "users-vip"
            }
          ]
      }
    },
    "acceptedResourceRoles": ["*"],
    "instances": 1,
    "cpus": 0.25,
    "mem": 512,
    "disk": 0,
    "env": { "DATABASE_HOST":"db.marathon.l4lb.thisdcos.directory" },
    "dependencies": [
      "/cinema/db"
    ],
    "healthChecks": [{
        "protocol": "HTTP",
        "path": "/users",
        "portIndex": 0,
        "timeoutSeconds": 2,
        "gracePeriodSeconds": 15,
        "intervalSeconds": 3,
        "maxConsecutiveFailures": 2
    }]
}
